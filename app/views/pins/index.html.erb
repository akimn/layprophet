
<div id="pins">

  <% @pins.each do |pin| %>
    <div class="box">
    <%= image_tag pin.image.url(:medium) %>
    <%= pin.title_Of_Piece %>
    <%= pin.brand %>
    <%= pin.comment %>
    <%= pin.user.email if pin.user %>
    <td><%= link_to 'Show', pin_path(pin) %>
      <% if pin.user == current_user %>
        <%= link_to 'Edit', edit_pin_path(pin) %>
        <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </div>
   <% end %>
</div>